        <!-- group -->
        <record model="res.group" id="group_change_sale_date">
            <field name="name">Nodux - Cambiar fecha de Venta</field>
        </record>

        <record model="res.user-res.group"
            id="user_admin_group_change_sale_date">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_change_sale_date"/>
        </record>

        <record model="res.user-res.group"
            id="user_trigger_group_change_sale_date">
